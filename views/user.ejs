<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/style/user.css">
    <title>Admin</title>
</head>
<body>
    <nav>
        <h1>Usuario</h1>
        <a href="http://localhost:8081/"><h3>home</h3></a>
    </nav>
    <a href="http://localhost:8081/article/create/<%= user.author_id %>"><button>Criar Artigo</button></a>
    <h2>Todos os artigos</h2>
    <section id="artigosUser">
        <% articles.forEach(article => { %>
            <a href='/article/<%= article.kb_permalink %>'>
                <h3> <%= article.kb_title %></h3>
            </a>
            <h4> Publicado: <%= article.kb_published %></h4>
            <form action="/toggle-publishedu/<%= article.kb_id %>/<%= article.kb_published %>/<%= user.author_id %>" method="POST">
                <input type="hidden" name="kb_published" value="<%= article.kb_published %>">
                <button type="submit" id="toggle_artigo">
                    <%= article.kb_published ? 'Desativar' : 'Ativar' %> Artigo
                </button>
            </form>
            <form action="/delete-articleu/<%= article.kb_id %>/<%= user.author_id %>" method="POST">
                <button type="submit" id="delete_artigo">Deletar Artigo</button>
            </form>
        <% }) %>
        
    </section>
</body>
</html>